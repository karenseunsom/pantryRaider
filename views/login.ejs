<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%- include('partials/head') %>
    </title>
    <script src="/javascript/login.js" async defer></script>
</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
            <span class="navbar-brand mb-0 h1">Pantry Raider</span>
        </div>
    </nav>
    <!-- alerts -->
    <%- include('partials/alerts') %>
    <div class="container">
        <div class="d-flex login-form" style="width: 18rem;">
            <div class="card-body">
                <form method="POST">
                    <div class="mb-3">
                            <div class="form-group">
                                <label for="email" class="form-label">Email address</label>
                                <input type="email" class="form-control" name="email" id="email-login"
                                    aria-describedby="emailHelp" placeholder="Enter email" required>
                                <small id="emailHelp" class="form-text text-muted">We'll never share your email with
                                    anyone else.</small>
                            </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="password-login"
                                placeholder="Password" required>
                        </div>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-warning user-button">Log in</button>
                        <a href="/users/signup" class="btn btn-warning" tabindex="-1" role="button">Sign Up</a>
                        <a href="/users/login/guest" class="btn btn-warning" tabindex="-1" role="button">Guest Login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>